<!DOCTYPE html>
<html>
<head>
  <title><%= StreamsMeta::APPLICATION_NAME %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='navigation'>
    <% if @current_user %>
    <p>You are logged in as <%= @current_user.name %>. <%= link_to "Log out", :controller => 'sessions', :action => 'logout'  %></p>
    <% else %>
    <p>You are not logged in. <%= link_to "Log in", :controller => 'sessions', :action => 'login'  %> </p>
    <% end %>
  </div>
<%= yield %>
<% if Rails.env.development? %>
<div class="debug">
Ruby <%= RUBY_VERSION %> 
</div>
<% end %>
</body>
</html>
