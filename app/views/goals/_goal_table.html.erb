<table class="goaltable" id='<%= id %>'>
<% gls.each do |g| %>
<tr id='<%= "goalid_#{g.id}" %>'>
  <td>
    <% if g.late? %>
    <%= image_tag "ex.png" %>
    <% end %>
  </td>
  <td><%= link_to g.name, g %></td>
  <td><img src='/di/test_<%= g.percentage_time %>.png'></img></td>
  <td>
    <%= "#{g.due_days.abs} day#{g.due_days.abs>1?"s":""} #{g.due_days<0?"ago!":"remaining"}" %>
  </td>
  <td><%= g.goalcomment.count %> comment(s)</td>
  <% acs.each do |a| %>
  <% if Pundit.policy(@current_user,g).send a.to_s+"?" %>
  <td class='actioncell'><%= tag_link_to a,g,GoalsController.actions[a] %><td>
  <% end %>
  <% end %>
</tr>
<% end %>
</table>
