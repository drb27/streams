<%= form_for [@workstream.becomes(Workstream),@goal] do |f| %>
<%= f.text_field :name %>
<br/>
<%= f.text_field :target, { :id => 'tgt_date', :name => 'anything', :class => "", :value => "#{f.object.target.strftime("%m/%d/%Y") unless f.object.new_record?}"} %>
<%= f.hidden_field :target, { :id => 'tgt_date_alt' }  %>
<%= f.submit "Add goal" %>
<% end %>
