<% @page_title = "UserAuth | Signup" %>
<div class="signupform">
  <h1>Sign Up</h1>
  <%= form_for( :user, :url => { :controller => 'users', :action => 'create'}) do |f| %>
  <p>Username:</br> <%= f.text_field :name %> </p>
  <p>Password:</br> <%= f.password_field :pwd %> </p>
  <%= f.submit :Signup %>
  <% end %>
  <% if @user.errors.any? %>
  <ul class="signuperrors">
    <% for message_error in @user.errors.full_messages %>
    <li>* <%= message_error %></li>
    <% end %>
  </ul>
  <% end %>
</div>
