#!/bin/bash
service thin stop
service nginx stop
rm -r /var/www/ruby.drb27.me/*
git archive --format=tar $1 | (cd /var/www/ruby.drb27.me/ && tar xf -)
chown -R www-data /var/www/ruby.drb27.me/*
cd /var/www/ruby.drb27.me && rake db:migrate
cd /var/www/ruby.drb27.me && rake db:seed
service thin start
service nginx start